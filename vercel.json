{
  "builds": [
    {
      "src": "apps/web/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "apps/docs/next.config.js",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    {
      "destination": "apps/docs/$1",
      "has": [
        {
          "type": "host",
          "value": "docs.yuricunha.com"
        }
      ],
      "source": "/(.*)"
    },
    {
      "destination": "apps/web/$1",
      "source": "/(.*)"
    }
  ]
}
