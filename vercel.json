{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "ignoreCommand": "node ./scripts/vercel-ignore.js",
  "crons": [
    {
      "path": "/api/cron/alerts",
      "schedule": "0 3 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/.well-known/matrix/:path*",
      "destination": "/_well-known/matrix/:path*"
    }
  ]
}
