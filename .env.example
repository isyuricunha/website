# ---------------------------------------------------------------------------------------------------------
# Spotify Now Playing
# @see https://developer.spotify.com/documentation/web-api/reference/get-the-users-currently-playing-track
# ---------------------------------------------------------------------------------------------------------
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REFRESH_TOKEN=

# ---------------------------------------------------------------------------------------------------------
# Google Gemini AI
# For AI-powered mascot conversations
# @see https://aistudio.google.com/app/apikey
# ---------------------------------------------------------------------------------------------------------
GEMINI_API_KEY=

# ---------------------------------------------------------------------------------------------------------
# Dashboard page
# ---------------------------------------------------------------------------------------------------------

# Google API (YouTube stats)
# @see https://developers.google.com/youtube/v3/getting-started
GOOGLE_API_KEY=

# Github API (Github stats)
# @see https://github.com/settings/tokens/new
GITHUB_TOKEN=

# WakaTime API Key (Coding hours)
# @see https://wakatime.com/api-key/
WAKATIME_API_KEY=

# ---------------------------------------------------------------------------------------------------------
# Authentication
# @see https://www.better-auth.com/docs/installation
# ---------------------------------------------------------------------------------------------------------
BETTER_AUTH_SECRET=
BETTER_AUTH_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Github OAuth
# @see https://github.com/settings/applications/new
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ---------------------------------------------------------------------------------------------------------
# Database URL
# For views, likes, guestbook, comments, authentication.
# ---------------------------------------------------------------------------------------------------------
DATABASE_URL="postgresql://postgres:example@db.example.example.com:5432/postgres"

# ---------------------------------------------------------------------------------------------------------
# Redis
# For caching
# ---------------------------------------------------------------------------------------------------------
UPSTASH_REDIS_REST_URL="https://example.upstash.io"
UPSTASH_REDIS_REST_TOKEN="example"

# ---------------------------------------------------------------------------------------------------------
# Random string (used for hashing)
# To identify a single user when they like the post.
# We hash the IP address so we won't know the actual address.
#
# @see https://www.useapassphrase.com/
# ---------------------------------------------------------------------------------------------------------
IP_ADDRESS_SALT=mariana viceroz douable yearnings

# ---------------------------------------------------------------------------------------------------------
# Discord Webhook
# For the notification of new comments from the guestbook.
# ---------------------------------------------------------------------------------------------------------
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/example/example

# ---------------------------------------------------------------------------------------------------------
# Analytics
# Using Umami.
#
# @see https://umami.is
# ---------------------------------------------------------------------------------------------------------
NEXT_PUBLIC_UMAMI_URL=https://umami.example.com/
NEXT_PUBLIC_UMAMI_WEBSITE_ID=example

# ---------------------------------------------------------------------------------------------------------
# Resend
# For the notification of new comments from the blog posts.
#
# @see https://resend.com
# ---------------------------------------------------------------------------------------------------------
RESEND_API_KEY=example
AUTHOR_EMAIL=website@yuricunha.com

# ---------------------------------------------------------------------------------------------------------
# Cloudflare Turnstile (Optional)
# Invisible CAPTCHA alternative for contact form spam protection.
# Get your keys at: https://dash.cloudflare.com/?to=/:account/turnstile
#
# @see https://developers.cloudflare.com/turnstile/
# ---------------------------------------------------------------------------------------------------------
NEXT_PUBLIC_TURNSTILE_SITE_KEY=example
TURNSTILE_SECRET_KEY=example

# ---------------------------------------------------------------------------------------------------------
# React Scan
# To detect performance issues in app
#
# @see https://dashboard.react-scan.com
# ---------------------------------------------------------------------------------------------------------
REACT_SCAN_MONITOR_API_KEY=example

# ---------------------------------------------------------------------------------------------------------
# Turbo Repo and NextJS
# Telemetry
# ---------------------------------------------------------------------------------------------------------
# Turbo Repo Tele = 1 off, 2 on
TURBO_TELEMETRY_DISABLED=1
DO_NOT_TRACK=1

# NextJS Tele = 1 off, 2 on
NEXT_TELEMETRY_DISABLED=1

# ---------------------------------------------------------------------------------------------------------
# Flags
# To enable or disable some features.
# ---------------------------------------------------------------------------------------------------------
# NEXT_PUBLIC_FLAG_COMMENT=true
# NEXT_PUBLIC_FLAG_AUTH=true
# NEXT_PUBLIC_FLAG_STATS=true
# NEXT_PUBLIC_FLAG_SPOTIFY=true
# NEXT_PUBLIC_FLAG_GEMINI=true
# NEXT_PUBLIC_FLAG_ANALYTICS=true
# NEXT_PUBLIC_FLAG_GUESTBOOK_NOTIFICATION=true
# NEXT_PUBLIC_FLAG_LIKE_BUTTON=true
# NEXT_PUBLIC_FLAG_TURNSTILE=true

NEXT_PUBLIC_FLAG_COMMENT=true
NEXT_PUBLIC_FLAG_AUTH=true
NEXT_PUBLIC_FLAG_STATS=true
NEXT_PUBLIC_FLAG_SPOTIFY=true
NEXT_PUBLIC_FLAG_GEMINI=true
NEXT_PUBLIC_FLAG_ANALYTICS=true
NEXT_PUBLIC_FLAG_GUESTBOOK_NOTIFICATION=true
NEXT_PUBLIC_FLAG_LIKE_BUTTON=true
NEXT_PUBLIC_FLAG_TURNSTILE=true

# For production URLs (optional - defaults to localhost:3000)
NEXT_PUBLIC_WEBSITE_URL="https://example.com"
