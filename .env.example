#########################################################################################################
# Website â€” .env.example
#
# How to use:
# 1) Copy this file to .env.local or .env, but .env.local is recommended
# 2) Adjust values as needed
#
# Notes:
# - Values here are examples only.
# - Secrets must never be committed.
# - Feature flags are OFF by default. Turn them on explicitly.
#########################################################################################################

#########################################################################################################
# Runtime / platform
#########################################################################################################

# NODE_ENV is validated by @isyuricunha/env.
NODE_ENV=development

# Set by CI providers (optional)
# CI=true

# Used by some tooling (optional)
# ANALYZE=true

# Used by some tooling (optional)
# PORT=3000

# Vercel Cron Jobs (optional)
# Used to authenticate requests to /api/cron/* endpoints.
CRON_SECRET="change-me-to-a-random-string-with-at-least-16-chars"

# Set automatically by Next.js (do not set manually)
# NEXT_RUNTIME=

#########################################################################################################
# Public URLs (safe to expose)
#########################################################################################################

# Base website URL (optional)
NEXT_PUBLIC_WEBSITE_URL="http://localhost:3000"

#########################################################################################################
# Database (required)
#########################################################################################################

# Postgres connection string (required)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/website"

#########################################################################################################
# Redis / Upstash (required)
#########################################################################################################

UPSTASH_REDIS_REST_URL="https://example-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="example-upstash-token"

#########################################################################################################
# Email (required)
#########################################################################################################

# Resend API key (required by env schema)
RESEND_API_KEY="re_example_1234567890"

# Used for notifications / from address (required only when comments feature flag is enabled)
AUTHOR_EMAIL="website@example.com"

#########################################################################################################
# Auth (optional)
# Enabled by: NEXT_PUBLIC_FLAG_AUTH=true
#########################################################################################################

BETTER_AUTH_SECRET="example-super-secret-string"
BETTER_AUTH_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID="example-google-client-id"
GOOGLE_CLIENT_SECRET="example-google-client-secret"

# GitHub OAuth
GITHUB_CLIENT_ID="example-github-client-id"
GITHUB_CLIENT_SECRET="example-github-client-secret"

#########################################################################################################
# Dashboard / Stats (optional)
# Enabled by: NEXT_PUBLIC_FLAG_STATS=true
#########################################################################################################

# Google API (YouTube stats)
GOOGLE_API_KEY="example-google-api-key"

# GitHub API (stats + some MDX cards)
GITHUB_TOKEN="ghp_exampletoken1234567890"

# WakaTime
WAKATIME_API_KEY="waka_example_1234567890"

#########################################################################################################
# Spotify Now Playing (optional)
# Enabled by: NEXT_PUBLIC_FLAG_SPOTIFY=true
#########################################################################################################

SPOTIFY_CLIENT_ID="example-spotify-client-id"
SPOTIFY_CLIENT_SECRET="example-spotify-client-secret"
SPOTIFY_REFRESH_TOKEN="example-spotify-refresh-token"

#########################################################################################################
# AI Providers (optional)
#########################################################################################################

########################################
# Gemini (optional)
# Enabled by: NEXT_PUBLIC_FLAG_GEMINI=true
########################################

GEMINI_API_KEY="example-gemini-api-key"
GEMINI_MODEL="gemini-2.0-flash-lite"

########################################
# Groq (optional)
# Enabled by: NEXT_PUBLIC_FLAG_GROQ=true
# Docs: https://console.groq.com/docs
########################################

GROQ_API_KEY="gsk_example_1234567890"
# Optional secondary Groq API key (fallback). If set, it will be tried when the primary key hits rate limits / quota.
GROQ_API_KEY_FALLBACK=""

# Model name (optional)
GROQ_MODEL="llama-3.3-70b-versatile"

########################################
# Yue LLM (Hugging Face Space) (optional)
# Enabled by: NEXT_PUBLIC_FLAG_HF=true and/or NEXT_PUBLIC_FLAG_HF_LOCAL=true
# IMPORTANT: keep YUE_LLM_API_TOKEN server-side only.
########################################

YUE_LLM_SPACE_URL="https://isyuricunha-yue-llm.hf.space"
YUE_LLM_API_TOKEN="example-yue-llm-token"

# Request timeout (ms)
YUE_LLM_REQUEST_TIMEOUT_MS=300000

########################################
# Ollama (optional)
# Enabled by: NEXT_PUBLIC_FLAG_OLLAMA=true
########################################

OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.2"

#########################################################################################################
# Analytics (optional)
# Enabled by: NEXT_PUBLIC_FLAG_ANALYTICS=true
#########################################################################################################

NEXT_PUBLIC_UMAMI_URL="https://umami.example.com"
NEXT_PUBLIC_UMAMI_WEBSITE_ID="00000000-0000-0000-0000-000000000000"

#########################################################################################################
# Guestbook notifications (optional)
# Enabled by: NEXT_PUBLIC_FLAG_GUESTBOOK_NOTIFICATION=true
#########################################################################################################

DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/example/example"

#########################################################################################################
# Likes anti-abuse salt (optional)
# Enabled by: NEXT_PUBLIC_FLAG_LIKE_BUTTON=true
#########################################################################################################

IP_ADDRESS_SALT="example passphrase for hashing ip"

#########################################################################################################
# Turnstile (optional)
# Enabled by: NEXT_PUBLIC_FLAG_TURNSTILE=true
#########################################################################################################

NEXT_PUBLIC_TURNSTILE_SITE_KEY="0x4AAAAAAExampleSiteKey"
TURNSTILE_SECRET_KEY="0x4AAAAAAExampleSecretKey"

#########################################################################################################
# Cloudflare R2 (optional)
#########################################################################################################

R2_ACCOUNT_ID="example-account-id"
R2_ACCESS_KEY_ID="example-access-key-id"
R2_SECRET_ACCESS_KEY="example-secret-access-key"
R2_BUCKET_NAME="example-bucket"

# Optional overrides (useful for S3-compatible clients)
R2_ENDPOINT="https://<accountid>.r2.cloudflarestorage.com"

# Public base URL used to serve uploaded files (e.g. via custom domain)
R2_PUBLIC_BASE_URL="https://assets.example.com"

#########################################################################################################
# React Scan (optional)
#########################################################################################################

REACT_SCAN_MONITOR_API_KEY="example-react-scan-key"

#########################################################################################################
# Vercel build metadata (optional / usually set automatically by Vercel)
#########################################################################################################

# NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA="abcdef1234567890"
# NEXT_PUBLIC_VERCEL_GIT_COMMIT_REF="main"

#########################################################################################################
# Telemetry (optional)
#########################################################################################################

TURBO_TELEMETRY_DISABLED=1
DO_NOT_TRACK=1
NEXT_TELEMETRY_DISABLED=1

#########################################################################################################
# Feature flags (ALL OFF by default)
#########################################################################################################

NEXT_PUBLIC_FLAG_COMMENT=false
NEXT_PUBLIC_FLAG_AUTH=false
NEXT_PUBLIC_FLAG_STATS=false
NEXT_PUBLIC_FLAG_SPOTIFY=false
NEXT_PUBLIC_FLAG_SPOTIFY_IMPORT=false

NEXT_PUBLIC_FLAG_GEMINI=false
NEXT_PUBLIC_FLAG_GROQ=false
NEXT_PUBLIC_FLAG_HF=false
NEXT_PUBLIC_FLAG_HF_LOCAL=false
NEXT_PUBLIC_FLAG_OLLAMA=false

NEXT_PUBLIC_FLAG_ANALYTICS=false
NEXT_PUBLIC_FLAG_GUESTBOOK_NOTIFICATION=false
NEXT_PUBLIC_FLAG_LIKE_BUTTON=false
NEXT_PUBLIC_FLAG_TURNSTILE=false
