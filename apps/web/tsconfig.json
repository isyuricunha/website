{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "content-collections": ["./.content-collections/generated"],
      "~/*": ["./public/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "declaration": false,
    "declarationMap": false,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "extends": "../../packages/tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "eslint.config.mjs",
    "postcss.config.mjs",
    "scripts/**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
