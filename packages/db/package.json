{
  "private": true,
  "name": "@isyuricunha/db",
  "version": "0.0.0",
  "description": "The ORM for tszhong0411's projects",
  "license": "MIT",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "clean": "rm -rf .turbo",
    "db:check": "pnpm with-env drizzle-kit check",
    "db:generate": "pnpm with-env drizzle-kit generate",
    "db:migrate": "pnpm with-env drizzle-kit migrate",
    "db:pull": "pnpm with-env drizzle-kit pull",
    "db:push": "pnpm db:migrate && pnpm with-env drizzle-kit push",
    "db:push:force": "pnpm db:migrate && pnpm with-env drizzle-kit push --force",
    "db:seed": "pnpm with-env tsx ./src/seed.ts",
    "db:studio": "pnpm with-env drizzle-kit studio",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env.local --"
  },
  "dependencies": {
    "@isyuricunha/env": "workspace:*",
    "drizzle-orm": "^0.44.7",
    "nanoid": "^5.1.6"
  },
  "peerDependencies": {
    "pg": "^8"
  },
  "devDependencies": {
    "@isyuricunha/eslint-config": "workspace:*",
    "@isyuricunha/tsconfig": "workspace:*",
    "@types/node": "^22.13.5",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.30.5",
    "pg": "^8.13.3"
  },
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx}": "eslint --fix --max-warnings 999"
  }
}
